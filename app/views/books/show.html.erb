<p class="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image ("100x100") %>
      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
       </tbody>
      </table>
      <div class="row">
         <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog edit-user_52324"></i>
         <% end %>
      </div>


      <h2 class="mt-3">New book</h2>
      <%= form_with model: @new_book, local:true do |f| %>
         <div class="form-group">
           <label for="book_title">Title</label>
           <%= f.text_field :title, class: 'form-control book_title' %>
          </div>
          <div class="form-group">
           <label for="form_opinion">Opinion</label>
            <%= f.text_area :body, class: 'form-control book_body' %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <thead>
      <table class="table table-hover table-inverse">

      </thead>
      <tdody>
          <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image ("80x80") %>
            </br>
            <%= @user.name %>
            <% end %>
          </td>
          <td>
           <%= link_to book_path(@book.id) do %>
           <%= @book.title %>
           <% end %>
          </td>
          <td><%= @book.body %></td>


          <% if @user.id == current_user.id %>
          <td>
          <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>
          Edit
          <% end %>
          </td>

          <td><%= link_to 'Destroy', @book,method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-sm btn-danger" %></td>


          </tr>
          <% end %>

      </tdody>
      </table>
    </div>


    </div>
  </div>
</div>